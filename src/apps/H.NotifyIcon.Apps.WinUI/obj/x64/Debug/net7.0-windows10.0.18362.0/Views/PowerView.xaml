<Page
    x:Class="H.NotifyIcon.Apps.Views.PowerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Grid>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Spacing="20"
            >
            <RadioButtons x:ConnectionId='2' x:Name="pbut">
                <RadioButton x:ConnectionId='4'
                    x:Name="Recom"
                    Content="Recommended"
                                                            
                     />
                <RadioButton x:ConnectionId='5'                  
                    x:Name="Bett"
                    Content="Better performance" 
                                                       
                    />
                <RadioButton x:ConnectionId='6' 
                    x:Name="Best"
                    Content="Best performance" 
                                                     
                    />
            </RadioButtons>

            <TextBlock Text="Automatically switch to best performance mode when dGPU load is detected (Only works with nVidia GPUs)" Margin="0,30,0,0"/>

            <ToggleSwitch x:ConnectionId='3' AutomationProperties.Name="simple ToggleSwitch" x:Name="dgpu" Margin="0,-20,0,0" />


        </StackPanel>
    </Grid>
</Page>

